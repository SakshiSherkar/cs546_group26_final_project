<main>
    <h1>Add Property</h1>
    <p id="errorTag" hidden>{{errorMsg}}</p>
    {{#if errFlag}}
    <p id="errorTag">{{errorMsg}}</p>
    {{/if}}
    <form id="add-property-form" action="/addProperty" method="POST" enctype="multipart/form-data">
        {{!-- <h4>Address</h4> --}}
        <label for="street">Street<span class="er">*</span>:</label>
        <input type="text" name="street" maxlength="50" id="street" value="{{propData.street}}" required>
        <p id="street-error" hidden></p>

        <label for="apartmentNum">Apartment No.:</label>
        <input type="text" name="apartmentNum" maxlength="25" id="apartmentNum" value="{{propData.apartmentNum}}">
        <p id="apartmentNum-error" hidden></p>

        <label for="city">City<span class="er">*</span>:</label>
        <input type="text" name="city" maxlength="25" id="city" value="{{propData.city}}" required>
        <p id="city-error" hidden></p>

        <label for="state">State<span class="er">*</span>:</label>
        <select name="state" id="state" required>
            <option value="" selected disabled>Select State</option>
            <option value="AL">Alabama</option>
            <option value="AK">Alaska</option>
            <option value="AZ">Arizona</option>
            <option value="AR">Arkansas</option>
            <option value="CA">California</option>
            <option value="CO">Colorado</option>
            <option value="CT">Connecticut</option>
            <option value="DE">Delaware</option>
            <option value="FL">Florida</option>
            <option value="GA">Georgia</option>
            <option value="HI">Hawaii</option>
            <option value="ID">Idaho</option>
            <option value="IL">Illinois</option>
            <option value="IN">Indiana</option>
            <option value="IA">Iowa</option>
            <option value="KS">Kansas</option>
            <option value="KY">Kentucky</option>
            <option value="LA">louisiana</option>
            <option value="ME">Maine</option>
            <option value="MD">Maryland</option>
            <option value="MA">Massachusetts</option>
            <option value="MI">Michigan</option>
            <option value="MN">Minnesota</option>
            <option value="MS">Mississippi</option>
            <option value="MO">Missouri</option>
            <option value="MT">Montana</option>
            <option value="NE">Nebraska</option>
            <option value="NV">Nevada</option>
            <option value="NH">New Hampshire</option>
            <option value="NJ">New Jersey</option>
            <option value="NM">New Mexico</option>
            <option value="NY">New York</option>
            <option value="NC">North Carolina</option>
            <option value="ND">North Dakota</option>
            <option value="OH">Ohio</option>
            <option value="OK">Oklahoma</option>
            <option value="OR">Oregon</option>
            <option value="PA">Pennsylvania</option>
            <option value="RI">Rhode Island</option>
            <option value="SC">South Carolina</option>
            <option value="SD">South Dakota</option>
            <option value="TN">Tennessee</option>
            <option value="TX">Texas</option>
            <option value="UT">Utah</option>
            <option value="VT">Vermont</option>
            <option value="VA">Virginia</option>
            <option value="WA">Washington</option>
            <option value="WV">West Virginia</option>
            <option value="WI">Wisconsin</option>
            <option value="WY">Wyoming</option>
        </select>
        <p id="state-error" hidden></p>

        <label for="zip">Zip Code<span class="er">*</span>:</label>
        <input type="number" name="zip" id="zip" value="{{propData.zip}}" required>
        <p id="zip-error" hidden></p>

        <label for="nearestLandmarks">Nearest Landmarks (separated by commas):</label>
        <input type="text" name="nearestLandmarks" maxlength="1000" id="nearestLandmarks"
            value="{{propData.nearestLandmarks}}">
        <p id="nearestLandmarks-error" hidden></p>

        {{!-- <h4>Price</h4> --}}
        <label for="price">Price<span class="er">*</span>: $</label>
        <input type="number" step="0.01" name="price" id="price" value="{{propData.price}}" required>
        <p id="price-error" hidden></p>

        <label for="latitude">Latitude<span class="er">*</span>:</label>
        <input type="number" step="0.000001" name="latitude" id="latitude" value="{{propData.latitude}}" required>
        <p id="latitude-error" hidden></p>

        <label for="longitude">Longitude<span class="er">*</span>:</label>
        <input type="number" step="0.000001" name="longitude" id="longitude" value="{{propData.longitude}}" required>
        <p id="longitude-error" hidden></p>


        {{!-- <h4>Details</h4> --}}
        <label for="description">Description<span class="er">*</span>:</label>
        <input type="text" name="description" maxlength="1000" id="description" value="{{propData.description}}"
            required>
        <p id="description-error" hidden></p>

        {{!-- <label for="propertyType">Property Type<span class="er">*</span>:</label>
        <input type="text" name="propertyType" id="propertyType">
        <p id="propertyType-error" hidden></p> --}}

        <label for="propertyType">Property Type<span class="er">*</span>:</label>
        <select name="propertyType" id="propertyType" required>
            <option value="" selected disabled>Select Property Type</option>
            <option value="private">Private</option>
            <option value="shared">Shared</option>
        </select>
        <p id="propertyType-error" hidden></p>

        {{!-- <label for="apartmentType">Apartment Type<span class="er">*</span>:</label>
        <input type="text" name="apartmentType" id="apartmentType">
        <p id="apartmentType-error" hidden></p> --}}

        <label for="apartmentType">Apartment Type<span class="er">*</span>:</label>
        <select name="apartmentType" id="apartmentType" required>
            <option value="" selected disabled>Select ApartmentType</option>
            <option value="1bhk">1BHK</option>
            <option value="2bhk">2BHK</option>
            <option value="3bhk">3BHK</option>
            <option value="4bhk">4BHK</option>
            <option value="studio">Studio</option>
            <option value="flex">Flex</option>
        </select>
        <p id="apartmentType-error" hidden></p>

        {{!-- <label for="accomodationType">Accommodation Type<span class="er">*</span>:</label>
        <input type="text" name="accomodationType" id="accomodationType">
        <p id="accomodationType-error" hidden></p> --}}

        <label for="accomodationType">Accommodation Type<span class="er">*</span>:</label>
        <select name="accomodationType" id="accomodationType" required>
            <option value="" selected disabled>Select Accom Type</option>
            <option value="permanent">Permanent</option>
            <option value="temporary">Temporary</option>
        </select>
        <p id="accomodationType-error" hidden></p>

        <label for="area">Area in square feet<span class="er">*</span>:</label>
        <input type="number" name="area" id="area" value="{{propData.area}}" required>
        <p id="area-error" hidden></p>

        <label for="bedroomCount">No. of Bedrooms<span class="er">*</span>:</label>
        <input type="number" name="bedroomCount" id="bedroomCount" value="{{propData.bedroomCount}}" required>
        <p id="bedroomCount-error" hidden></p>

        <label for="bathroomCount">No. of Bathrooms<span class="er">*</span>:</label>
        <input type="number" name="bathroomCount" id="bathroomCount" value="{{propData.bathroomCount}}" required>
        <p id="bathroomCount-error" hidden></p>

        <label for="images">Upload Property Photos<span class="er">*</span>: </label>
        <input name="images" id="images" type="file" accept="image/*" multiple>
        <p id="images-error" hidden></p>

        <button type="submit" name="submitButton" id="submitButton">Submit</button>
        {{!-- <button type="cancel" name="cancelButton" id="cancelButton">Cancel</button> --}}
    </form>
    <div id="errors" hidden></div>
    {{#if isError}}
    <ul id="errors">
        {{#each errors}}
        <li>
            {{this}}
        </li>
        {{/each}}
    </ul>
    {{/if}}
</main>

<script src="/public/js/addProperty.js"></script>